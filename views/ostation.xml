<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
     <!--#######  debut journee ########-->

         <record id="ostation_minicaisse_form" model="ir.ui.view">
	         <field name="name">ostation.minicaisse.form</field>
             <field name="model">ostation.minicaisse</field>
             <field name="arch" type="xml">
	         <form string="Minicaisse">
                <header>   
                    <button name="valider" type="object" string="Cloturer la caisse" class="btn-primary" states="brouillon"/>
                    <button name="retour" type="object" string="Mettre en brouillon" class="btn-primary" attrs="{'invisible': [('state', '!=', 'valide')]}"/>
                    <button name="annuler" type="object" string="Annuler" class="btn-primary" states="valide"/>
					<field name="state" widget="statusbar" statusbar_visible="brouillon,valide,annuler"/>
				</header>
                <sheet >
                    <group>

                        <group >
                            <field name="idstation" attrs="{'readonly': [('state', '!=', 'brouillon')]}" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                            <field name="name" attrs="{'readonly': [('state', '!=', 'brouillon')]}"/>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'brouillon')]}"/>
                        </group>
                        <group >
                            <field name="soldefinal" readonly='1'/>
                        </group>
                    </group>
                
                    
                    <notebook>
                        <!-- les depenses -->
                        <page string="Dépenses"> 
                            <field name="lignedepense" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom"   open="false" string="Détails dépenses">
                                    <field name="date" />
                                    <field name="idemploye"  options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="name" />
                                    <field name="description" />
                                    <field name="montant" sum="Total" />
                                 </tree>
                            </field>
                        </page>
                        <!-- les appro mini-caisse -->
                        <page string="Appro-minicaisse"> 
                            <field name="ligneapprominicaisse" attrs="{'readonly': [('state', '!=', 'brouillon')]}" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}">
                                <tree editable="bottom" string="Détails appro-minicaisse">
                                    <field name="date" />
                                     <field name="idemploye" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="name" />
                                    <field name="montant"  sum="Total"/>
                                 </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
               </form>
			</field>
	    </record>

        
        <record id ="minicaisse_tree_view" model="ir.ui.view">
            <field name="name">ostation.minicaisse.tree</field>
            <field name="model">ostation.minicaisse</field>
            <field name="arch" type="xml">
               <tree string = "Minicaisse">    
                 <field name="idstation"/>
                 <field name="name"/>
                 <field name="soldefinal"/>
              </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ostation_minicaisse">
            <field name="name">Minicaisse</field>
            <field name="res_model">ostation.minicaisse</field>
            <field name="view_mode">tree,form</field>
             <field name="view_id" ref="minicaisse_tree_view"/>
            <field name="help" type="html">
              <p class = "o_view_nocontent_smiling_face"> Ajouter une minicaisse
            </p>
            </field>
        </record> 

         <!--#######  debut lignevente ########-->

         <record id="ostation_lignevente_form" model="ir.ui.view">
	         <field name="name">ostation.lignevente.form</field>
             <field name="model">ostation.lignevente</field>
             <field name="arch" type="xml">
	         <form string="Journée" version="7.0">
                <header>
					<field name="state" widget="statusbar" statusbar_visible="brouillon,valide,annuler"/>
				</header>
                <sheet >
                    <group>
                        <group >
                            <field name="idemploye" attrs="{'readonly': [('state', '!=', 'brouillon')]}" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                            <field name="idpompe" attrs="{'readonly': [('state', '!=', 'brouillon')]}" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                        </group>
                        <group >
                            <field name="montanttotalcarburant" />
                            <field name="montanttotallubrifiant" />
                            <field name="montanttotalconsignegaz" />
                            <field name="montanttotalrechargegaz" />
                            <field name="montanttotalsolaire" />
                            <field name="montanttotalaccessoire" />
                            <field name="montanttotaltheorique" />
                            <field name="montanttotalverse" />
                            <field name="ecart" />
                        </group>
                        
                    </group>
                    <notebook>
                        <!-- les ventes -->
                        <page string="Détails des ventes "> 
                            <field name="ligneventedetail" context="{'idpompetmp':idpompe}" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Vente détails">

                                    <field name="idlignevente" invisible="1"/>
                                    <field name="categoriearticle" invisible="1"/>
                                    <field name="idpistolet"  options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idarticle"/>
                                    <field name="retourcuve" attrs="{'invisible': [('categoriearticle', '!=', 'carburant')]}"/>
                                    <field name="indexdebut" attrs="{'invisible': [('categoriearticle', '!=', 'carburant')]}"/>
                                    <field name="indexfin" attrs="{'invisible': [('categoriearticle', '!=', 'carburant')]}"/>
                                    <field name="prixunitaire"  />
                                    <field name="quantitetheorique" />
                                    <field name="montanttheorique"  sum="Total"/>
                                    <!-- <field name="dateshift"/>
                                    <field name="ordreshift" /> -->
                                    
                                </tree>
                            </field>
                           
                        </page>
                        <page string="Détails versements"> 
                            <field name="ligneversement" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Détails versement">
                                    <field name="idtypepaiement" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="montant" sum="Total"/>
                                </tree>
                            </field>
                           
                        </page>
                        </notebook>

                </sheet>
               </form>
			</field>
	    </record>


        <record model="ir.actions.act_window" id="action_ostation_lignevente">
            <field name="name">Ligne vente</field>
            <field name="res_model">ostation.lignevente</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_idshift':active_id}</field>
            <field name="target">new</field>
            <field name="view_id" ref="ostation_lignevente_form"/>
            <field name="help" type="html">
              <p class = "o_view_nocontent_smiling_face"> Ajouter une ligne de vente
            </p>
            </field>
        </record> 

 <!--#######  fin lignevente ########-->

 <!--#######  fin journee ########-->
        <!-- Formulaires  Shifts -->
        <record id="ostation_shift_form" model="ir.ui.view">
