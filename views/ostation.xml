                                    <field name="montanttotalcarburant" sum="Total"/>
                                    <field name="montanttotallubrifiant" sum="Total"/>
                                    <field name="montanttotalconsignegaz" sum="Total"/>
                                    <field name="montanttotalrechargegaz" sum="Total"/>
                                    <field name="montanttotalsolaire" sum="Total"/>
                                    <field name="montanttotalaccessoire" sum="Total"/>
                                    <field name="montanttotaltheorique" sum="Total"/>
                                    <field name="montanttotalverse" sum="Total"/>
                                    <field name="ecart" sum="Total"/>
                                </tree>
                            </field>
                           
                        </page>
                       
                        <!-- les Jauge -->
                        <page string="Jaugeage"> 
                            <field name="lignejauge" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Jaugeage">
                                    <field name="idcuve" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="jaugedebut" />
                                    <field name="jaugefin" />
                                    <field name="ecart" />
                                </tree>
                            </field>
                        </page>

                        <!-- Consom. gros clients -->
                        <page string="Consom. gros clients"> 
                            <field name="lignerecapgrosclient" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Consom. gros clients">
                                    <field name="idclient" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idchauffeur" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idarticle" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idtypepaiement" />
                                    <field name="nbons" />
                                    <field name="quantite" />
                                    <field name="prixunitaire" />
                                    <field name="montant"  sum="Total"/>
                                 </tree>
                            </field>
                        </page>
                           <!-- Consommation interne -->
                         <page string="Consommation interne"> 
                            <field name="ligneconsointerne" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Consommation interne">
                                    <field name="date" />
                                    <field name="name" />
                                    <field name="idemploye" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idpompe" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idpistolet" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idarticle" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="quantite" />
                                    <field name="prixunitaire" />
                                    <field name="montant"  sum="Total"/>
                                 </tree>
                            </field>
                        </page>

                         <!-- Notation employe -->
                        <page string="Notation employé"> 
                            <field name="lignenotationemploye" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Notation employé">
                                    <field name="idemploye" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="name" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="note" />
                                 </tree>
                            </field>
                        </page>
                         <!-- rebus de stock -->
                        <page string="Rebus de stock"> 
                            <field name="lignerebusstock" attrs="{'readonly': [('state', '!=', 'brouillon')]}">
                                <tree editable="bottom" string="Rebus de stock">
                                    <field name="date" />
                                    <field name="idpompe" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idcuve" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idpistolet" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="idarticle" options="{'no_quick_create':True, 'no_create_edit':True, 'no_open':True,}"/>
                                    <field name="quantite" />
                                    <field name="motif" />
                                 </tree>
                            </field>
                        </page>
                    </notebook>
                
				
                </sheet>
               </form>
			</field>
	    </record>

         <!--  Shifts -->
