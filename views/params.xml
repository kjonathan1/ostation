       <!--################  debut  formulaire de vue et form du modele station #####################-->

        <record id ="station_form_view" model="ir.ui.view">
            <field name="name">ostation.station.form</field>
            <field name="model">ostation.station</field>
            <field name="arch" type="xml">
              <form string="Formulaire de saisie de station">
                <group>
                   <group>
                      <field name="code"/>
                      <field name="name"/>
                      <field name="orangemoney"/>
                      <field name="adresse"/>
                      <!-- <field name="quantitebouteillegaz"/> -->
