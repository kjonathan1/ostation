       <!--################  debut  formulaire de vue et form du modele societe #####################-->

        <record id ="societe_form_view" model="ir.ui.view">
            <field name="name">ostation.societe.form</field>
            <field name="model">ostation.societe</field>
            <field name="arch" type="xml">
              <form string="Formulaire de société">
                <group>
                   <group>
                       <field name="codesociete"/>
                       <field name="name"/>
                       <field name="rccm"/>
                       <field name="ifu"/>
                       <field name="active"/>
                   </group>
                   <group>
                        <field name="regime"/>
                        <field name="division"/>
                        <field name="adresse"/>
                    </group>
                </group> 
                  <notebook>
                   <page string="Camion">                          
                      <field name="lignecamion" widget="one2many_list">   
                        <tree string="Lignecamions" editable="bottom" edit="True">
                            <field name="codecamion"/>
                            <field name="name"/>
                            <field name="marque"/>
                            <field name="nbcompartiment"/>
                            <!-- <field name="idsociete"/>    -->
                        </tree>
                      </field>
                    </page>
                   <page string="Chauffeur">                          
                      <field name="lignechauffeur" widget="one2many_list">   
                        <tree string="Lignechauffeurs" editable="bottom" edit="True">
                            <field name="codechauffeur"/>
                            <field name="name"/>
                            <field name="cnib"/>
                            <field name="telephone"/>
                            <field name="adresse"/>   
                            <!-- <field name="idsociete"/>    -->
                        </tree>
                      </field>
                    </page>
                </notebook>
              </form>
            </field>
        </record>
        

        <record id ="societe_tree_view" model="ir.ui.view">
            <field name="name">ostation.societe.tree</field>
            <field name="model">ostation.societe</field>
            <field name="arch" type="xml">
               <tree string = "Liste des sociétés">
                <field name="codesociete"/>
                <field name="name"/>
                <field name="rccm"/>
                <field name="ifu"/>
                <field name="regime"/>
                <field name="division"/>
                <field name="adresse"/>
                <field name="active"/>
              </tree>
            </field>
        </record>


        <record id="societe_search_view" model="ir.ui.view" >
            <field name="name">ostation.societe.search</field>
            <field name="model">ostation.societe</field>
            <field name="arch" type="xml">
                <search>
                   <field name="name"/>
                   <field name="ifu"/>
                   <field name="active"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ostation_societe">
            <field name="name">Société</field>
            <field name="res_model">ostation.societe</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class = "o_view_nocontent_smiling_face">créer une nouvelle société
            </p>
            </field>
        </record>

