        </record>

        <record id="station_search_view" model="ir.ui.view" >
            <field name="name">ostation.station.search</field>
            <field name="model">ostation.station</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="Tout" string="Tout" domain="['|', ('active', '=', True), ('active', '=', False)]" ></filter>
                   <field name="code"/>
                   <field name="name"/>
                   <field name="idemploye"/>
                  <field name="active"/>
                </search>
            </field>
        </record>

